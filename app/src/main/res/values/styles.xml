<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTurkuaz</item>
        <item name="colorPrimaryDark">@color/colorTurkuaz</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorDarkBlue</item>
    </style>
    <style name="Authantication_Theme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textColorPrimary">@color/colorDarkBlue</item>
        <item name="android:textColorSecondary">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorgreen</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorDarkBlue</item>
        <item name="android:windowBackground">@drawable/arkaplan</item>
        <item name="colorButtonNormal">@color/colorblue</item>
        <item name="editTextColor">@color/colorDarkBlue</item>
        <item name="android:textColorHint">@color/colorDarkBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#1CB3BC</item>
    </style>

</resources>
